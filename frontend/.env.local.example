VITE_DYNAMODB_CHAT_TABLE=outreach-chat-history
VITE_DYNAMODB_CAMPAIGN_TABLE=outreach-campaigns

# Cognito Configuration (Public variables)
VITE_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
VITE_COGNITO_USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
